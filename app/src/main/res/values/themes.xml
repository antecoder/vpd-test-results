<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Vpd" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="Theme.Vpd.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/bank_splash</item>
        <item name="windowSplashScreenBackground">@color/vpd_purple</item>
        <item name="postSplashScreenTheme">@style/Theme.Vpd</item>
    </style>

    <style name="ButtonStyle.Vpd.Filled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/josefin_sans_medium</item>
        <item name="android:background">@color/vpd_purple</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

</resources>