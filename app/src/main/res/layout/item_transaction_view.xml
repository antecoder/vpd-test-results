<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_lists"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guideline_lists"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/guideline_lists"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/guideline_lists"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/transfer"
        app:tint="@color/grey"
        android:alpha="0.5"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/txtAccount1"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/icon2"
        android:textColor="@color/red"
        android:layout_marginStart="8dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:lines="1"
        android:ellipsize="end"
        android:fontFamily="@font/josefin_sans_semi_bold"
        android:text="Account 1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtAccount2"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/txtAccount1"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/icon2"
        android:textColor="@color/vpd_green"
        android:layout_marginStart="8dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:lines="1"
        android:ellipsize="end"
        android:fontFamily="@font/josefin_sans_semi_bold"
        android:text="Account 2"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="40dp"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/transfer_down"
        app:tint="@color/vpd_green"
        android:layout_height="40dp"/>


    <TextView
        android:id="@+id/txtBalance"
        app:layout_constraintStart_toStartOf="@id/txtAccount1"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtAccount2"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:textColor="@color/black"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="NGN.0000"
        android:layout_height="wrap_content"/>


    <View
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/list_divider"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/divider_height"/>

</androidx.constraintlayout.widget.ConstraintLayout>