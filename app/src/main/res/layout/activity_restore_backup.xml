<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.seed.RestoreBackupActivity">

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/btn_close"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/black"
        android:text="@string/welcome_back"
        android:textSize="32sp"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txtInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/grey"
        android:text="@string/restoring_backup_hint"
        android:textSize="16sp"
        android:fontFamily="@font/josefin_sans_medium"
        android:gravity="center"
        />

    <com.joeydalu.vpd.view.custom.CircleProgressBar
        android:id="@+id/progress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgLogo"
        app:progress_background_color="@color/grey_3"
        app:progress_text_color="@color/teal_700"
        app:progress_text_size="20sp"
        app:progress_style="solid_line"
        app:progress_stroke_width="12dp"
        app:progress_text_font="@font/josefin_sans_semi_bold"
        app:progress_start_color="@color/teal_700"
        app:progress_end_color="@color/teal_700"
        app:progress_stroke_cap="round"
        app:drawBackgroundOutsideProgress="true"
        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo"
        app:tint="@color/grey_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>